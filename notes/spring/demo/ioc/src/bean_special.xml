<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 设置值：空值 -->
    <bean id="user_null" class="com.example.Employee">
        <property name="name"><null/></property>
    </bean>

    <!-- 设置值：特殊符号 -->
    <bean id="user_cdata" class="com.example.Employee">
        <property name="name"><value><![CDATA["<<\>>"]]></value></property>
    </bean>

    <!-- 设置值：外部bean -->
    <bean id="bean_department" class="com.example.Department">
        <constructor-arg index="0" value="外部Bean"/>
    </bean>
    <bean id="user_outer" class="com.example.Employee">
        <property name="department" ref="bean_department"/>
    </bean>

    <!-- 设置值：内部bean -->
    <bean id="user_inner" class="com.example.Employee">
        <property name="department">
            <bean class="com.example.Department">
                <constructor-arg index="0" value="内部Bean"/>
            </bean>
        </property>
    </bean>
</beans>