<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd
        ">
    <!-- 默认执行class对象的无参构造方法 -->
    <bean id="user_first" class="com.example.Employee" />

    <!-- 属性注入：使用property（调用set方法） -->
    <bean id="user_property" class="com.example.Employee">
        <property name="name" value="张塞" />
        <property name="age" value="26" />
        <property name="gender" value="true" />
    </bean>

    <!-- 属性注入：使用constructor（调用构造方法） -->
    <bean id="user_constructor" class="com.example.Employee">
        <!-- 根据参数名称或顺序均可 -->
        <constructor-arg index="0" value="李思思"/>
        <constructor-arg name="age" value="18"/>
        <constructor-arg name="gender" value="false"/>
    </bean>

    <!-- 属性注入：使用p名称空间（调用set方法） -->
    <!--
        xmlns:p="http://www.springframework.org/schema/p"
    -->
    <bean id="user_p" class="com.example.Employee"
          p:name="王屋山" p:age="32" p:gender="true"
    />
</beans>